/* pages/search/search.wxss */
.container{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  overflow-y: scroll;
  
}

form{
  margin-top: 50rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  
}

.info-input{
  margin-top: 0rpx;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.input-title{
  font-size: 40rpx;
  font-weight: 600;
  color: rgb(255, 195, 122);
  text-align: center;
}

.input-item{
  margin-top: 20rpx;
  margin-left: 30rpx;
  width: 300rpx;
}

.input-item input{
  border: 1px solid bisque;
}

.separate-line1{
  width: 100%;
  border: 0.6px solid #bbbbbb;
}

.separate-line2{
  width: 92%;
  border: 0.6px solid #dadada;
}